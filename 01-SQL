CREATE TABLE IF NOT EXISTS Genres (
	IDGenres SERIAL PRIMARY KEY,
	NameGenres VARCHAR(80) UNIQUE NOT NULL
);

CREATE TABLE IF NOT EXISTS Executor (
	NicknameExecutor VARCHAR(80) UNIQUE PRIMARY KEY,
	Album VARCHAR(80) NOT NULL
);

CREATE TABLE IF NOT EXISTS GenresExecutor (
	ID SERIAL PRIMARY KEY,
	IDGenres INTEGER REFERENCES Genres(IDGenres),
	NicknameExecutor VARCHAR REFERENCES Executor(NicknameExecutor)
);

CREATE TABLE IF NOT EXISTS Album (
	Name VARCHAR(80) PRIMARY KEY,
	Track VARCHAR(80) NOT NULL,
	Year_of_release DATE NOT NULL
);

CREATE TABLE IF NOT EXISTS ExecutorAlbum (
	ID SERIAL PRIMARY KEY,
	AlbumName VARCHAR REFERENCES Album(Name),
	Executor VARCHAR REFERENCES Executor(NicknameExecutor)
);


CREATE TABLE IF NOT EXISTS Treck (
	ID SERIAL PRIMARY KEY,
	Name VARCHAR(80) NOT NULL,
	Album VARCHAR REFERENCES Album(Name),
	Duration TIME  NOT NULL
);

CREATE TABLE IF NOT EXISTS Collection (
	Name VARCHAR(80) NOT NULL PRIMARY KEY,
	Year_of_release date 
);

CREATE TABLE IF NOT EXISTS TrecCollection (
	ID SERIAL PRIMARY KEY,
	TrackID INTEGER REFERENCES Treck(ID),
	NameCollection VARCHAR REFERENCES Collection(Name)
);
